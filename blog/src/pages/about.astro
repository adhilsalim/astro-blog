---
import "../styles/global.css";

const pageTitle = "Astro | About";

const identity = {
  firstName: "Adhil",
  country: "India",
  occupation: "Engineering Student",
  hobbies: ["coding", "youtube", "arduino"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];
const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontSize = "4rem";
const headingColor = "purple";
const fontWeight = "bold";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <style define:vars={{ skillColor, fontSize, headingColor, fontWeight }}>
      h1 {
        color: var(--headingColor);
        font-size: var(--fontSize);
      }

      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
      }
    </style>
  </head>
  <body>
    <a href="/">Home üè†</a>
    <a href="/about/">About üôã‚Äç‚ôÇÔ∏è</a>
    <a href="/blog/">Blog üìù</a>

    <h1>{pageTitle.split("|")[0]}</h1>
    <p>Here are a few facts about me:</p>
    <ul>
      <li>My name is {identity.firstName}.</li>
      <li>
        I live in {identity.country} and I am {
          ["a", "e", "i", "o", "u"].includes(
            identity.occupation[0].toLowerCase()
          )
            ? "an"
            : "a"
        }
        {identity.occupation}.
      </li>
      {
        identity.hobbies.length >= 2 && (
          <li>
            Two of my hobbies are: {identity.hobbies[0]} and{" "}
            {identity.hobbies[1]}
          </li>
        )
      }
    </ul>
    <p>My Skills Are:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    {happy && <p>I am happy to be learning Astro!</p>}

    {finished && <p>I finished this tutorial!</p>}

    {
      goal === 3 ? (
        <p>My goal is to finish in 3 days.</p>
      ) : (
        <p>My goal is not 3 days.</p>
      )
    }
  </body>
</html>
