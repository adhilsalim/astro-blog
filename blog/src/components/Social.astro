---
const { platform, username } = Astro.props;
---

<a
  href={`https://www.${platform}.com/${username}`}
  target="_blank"
  class={platform === "youtube" ? "color-youtube" : "color-normal"}
  >{platform}</a
>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    text-decoration: none;
  }

  .color-youtube {
    background-color: #ff0000;
  }

  .color-normal {
    background-color: #4c1d95;
  }
</style>
